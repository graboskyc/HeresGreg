@page
@model HeresKids.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log In to Here's the Kids";
}
@using Microsoft.AspNetCore.Components.Authorization
<!DOCTYPE html>
<html lang="en" data-theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="css/pico.azure.min.css" />
    <link rel="stylesheet" href="css/greg.css" />    
    <link rel="stylesheet" href="css/site.css" />
    <link rel="stylesheet" href="HeresKids.styles.css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
</head>

<body data-theme="dark">

<main class="container">
    <article style="text-align:center;margin-top:20px;min-height:90vh;" data-theme="light">   
        <h1>Please Login</h1>
        <!-- Replace KidPic with a static image or partial view if needed -->
        <img src="/images/kidpic.png" alt="KidPic" height="100" />
        <br />

        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <label for="Email">Email Address</label>
            <input type="email" id="Email" name="Email" value="@Model.Email" placeholder="Email" class="form-control" />

            <label for="Password">Password</label>
            <input type="password" id="Password" name="Password" placeholder="Password" class="form-control" />

            <button type="submit" style="width:100%" @(Model.IsLoading ? "disabled" : "")>
                @(Model.IsLoading ? "Logging in..." : "Login")
            </button>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div style="color:red">@Model.ErrorMessage</div>
            }
        </form>
    </article>
</main>
</body>
</html>